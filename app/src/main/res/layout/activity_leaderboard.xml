<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ† Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:text="ðŸ† Tournament Leaderboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/white"/>

        <!-- ðŸ¥‡ðŸ¥ˆðŸ¥‰ Top 3 podium -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- ðŸ¥ˆ 2nd Place -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgSilver"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/silver_medal"
                    android:contentDescription="2nd place" />

                <TextView
                    android:id="@+id/tvSecondTeam"
                    android:text="Runner-up"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- ðŸ¥‡ 1st Place -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgGold"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/gold_medal"
                    android:contentDescription="Champion" />

                <TextView
                    android:id="@+id/tvChampionTeam"
                    android:text="Champion"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- ðŸ¥‰ 3rd Place -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgBronze"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/bronze_medal"
                    android:contentDescription="3rd place" />

                <TextView
                    android:id="@+id/tvThirdTeam"
                    android:text="3rd Place"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ“‹ RecyclerView for complete standings -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStandings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-8197142441567841/9249262106"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>
</ScrollView>

